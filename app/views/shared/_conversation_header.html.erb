<% user_interlocutor = conversation.messages.first.sender == current_user ? conversation.messages.first.receiver :  conversation.messages.first.sender %>
<% artist_stage_interlocutor = user_interlocutor.artist? ? user_interlocutor.artists[0] : user_interlocutor.stages[0] %>

<div class="conversation-header">
  <div class="conversation-header-container">
    <div class="conversation-header-left-side">
      <%= link_to(conversations_path) do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l192 192c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L77.3 256 246.6 86.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-192 192z"/></svg>
      <% end %>
      <div class="conversation-interlocutor-data">
          <%= cl_image_tag(artist_stage_interlocutor.photos.first.key, class: "avatar") %>
          <h2><%= artist_stage_interlocutor.name%></h2>
          <%= link_to("", artist_stage_interlocutor.class == Artist ? artist_path(artist_stage_interlocutor) : stage_path(artist_stage_interlocutor)) %>
      </div>
    </div>
    <div class="conversation-header-right-side">
      <%# <div class="menu-btn">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 128 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M64 360a56 56 0 1 0 0 112 56 56 0 1 0 0-112zm0-160a56 56 0 1 0 0 112 56 56 0 1 0 0-112zM120 96A56 56 0 1 0 8 96a56 56 0 1 0 112 0z"/></svg>
      </div> %>
      <% if current_user.stage? %>
        <%= link_to("Creer une reservation", "", class: "btn primary") %>
      <% end %>
    </div>
  </div>
</div>
