<% ad = nil if local_assigns[:ad].nil? %>
<% fill = false if local_assigns[:fill].nil? %>
<% profile = dashboard_path if local_assigns[:profile].nil? %>

<div class="<%= fill ? "m-card fill": "m-card"%>">
  <div class="card-header">
    <% if ad %>
      <%= cl_image_tag(profile.photos[0].key, class:"avatar") %>
    <% else %>
      <div class="avatar"></div>
    <% end %>
    <div class="card-header-text-content">
      <h3><%= ad ? profile.name : "La Petite Cuite" %></h3>
      <small>12h</small>
      <%= link_to("", profile.class == Artist ? artist_path(profile.id) : stage_path(profile.id)) %>
    </div>
  </div>
  <div class="card-body">
    <p><%= ad ? ad.content : "Salut les artistes ðŸ––. Aujourdâ€™hui nous souhaitons vous faire part dâ€™un ..." %></p>
    <% if ad %>
      <%= cl_image_tag(ad.photo.key, class:"card-image") %>
    <% else %>
      <div class="card-image"></div>
    <% end %>
  </div>
</div>
